@model IEnumerable<Order>

@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Size ID</th>
            <th>Order Piece</th>
            <th>Order Price</th>
            <th>Menu ID</th>
            <th>App User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderSizeId</td>
                <td>@order.OrderPiece</td>
                <td>@order.OrderPrice</td>
                <td>@order.MenuId</td>
                <td>@order.AppUserId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@order.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>